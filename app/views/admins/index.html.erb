<h1 class="text-center mt-5">Requested Loans</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @loans.any? %>
        <div style="max-height: 450px; overflow-y: auto;">
          <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Amount</th>
                <th scope="col">Interest Rate</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @loans.each do |loan| %>
                <tr>
                  <td><%= loan.principle_amount %></td>
                  <td><%= loan.interest_rate %></td>
                  <td>
                    <div class="d-flex justify-content-center gap-3">
                      <%= link_to "Approve", edit_admin_path(loan.id), remote: true, class: "btn btn-link text-decoration-none text-reset btn-primary" %>
                      <%= button_to "Reject", reject_loan_admin_path(loan.id), class: "btn btn-link text-decoration-none text-reset btn-danger", data: { confirm: 'Are you sure?' } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-center">No loans present</p>
      <% end %>
    </div>
  </div>
</div>
