<div class="container">
  <div class="row justify-content-center ">
    <div class="col-md-8">
      <% if loans.any? %>
        <div style="max-height: 450px; overflow-y: auto;" class="card user-card">
          <table class="table table-striped table-bordered text-center ">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Amount</th>
                <th scope="col">Interest Rate</th>
              </tr>
            </thead>
            <tbody>
              <% loans.each do |loan| %>
                <tr>
                  <td><%= loan.principle_amount.to_i %></td>
                  <td><%= loan.interest_rate %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-center">No loans present</p>
      <% end %>
    </div>
  </div>
</div>
