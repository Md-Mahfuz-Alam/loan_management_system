<div class="modal" tabindex="-1" id="edit_loan_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Interest Rate </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: admin_path(params[:id]), method: :patch do |form| %>
          <div class="form-group my-3">
            <%= form.label :interest_rate, 'Interest Rate' %>
            <%= form.number_field :admin_interest_rate, class: "form-control", placeholder: "Interest Rate" %>
          </div>
          <%= hidden_field_tag :interest_rate, @interest_rate %>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= form.submit "Approve", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>