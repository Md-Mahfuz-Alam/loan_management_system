<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 card user-card custom-shadow ">
      <h1 class="text-center mt-5">Loan Request</h1>
      <%= form_for @loan do |form|%>
        <div class="form-group ">
          <%= form.label :Loan_Amount, class: 'required' %>
          <%= form.text_field :principle_amount, class: "form-control", placeholder: "Enter the amount" , required: true%>
          <p class='error'><%= show_errors(@loan, :principle_amount)%></p>
        </div>
        <%= form.submit "Request", class: " mt-3 button-design btn-primary form-control mb-4 w-25 submit-button" %>
      <% end %>
    </div>
  </div>
</div>