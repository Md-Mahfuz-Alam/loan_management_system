<h1 class="text-center mt-5">Open Loans</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @loans.any? %>
        <div style="max-height: 450px; overflow-y: auto;" class="card user-card custom-shadow">
          <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Loan Amount</th>
                <th scope="col">Amount with Interest</th>
                <th scope="col">Interest Rate</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @loans.each do |loan| %>
                <tr>
                  <td><%= loan.principle_amount.to_i %></td>
                  <td><%= loan.amount_with_interest.to_i %></td>
                  <td><%= loan.interest_rate %>
                  </td>
                  <td><%= link_to "Pay All Amount", loan_path(loan.id), method: :put, class: "button-design btn-primary text-decoration-none " %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-center">No loans present</p>
      <% end %>
    </div>
  </div>
</div>
